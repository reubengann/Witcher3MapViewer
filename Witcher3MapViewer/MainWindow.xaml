<Window x:Class="Witcher3MapViewer.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Witcher3MapViewer.WPF" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:map="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadInitialMapCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <map:MapControl x:Name="MapControl"/>
        <ComboBox 
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Width="120" 
            Height="28" 
            Margin="10"
            VerticalContentAlignment="Center"
            ItemsSource="{Binding ListOfMaps}"
            SelectedItem="{Binding SelectedMap}"/>


    </Grid>
</Window>
